<!-- 작성한 게시물 보는 칸 -->

<input type="hidden" id="id" name="pid" value="<%= list.pid %>">

<div class="form-group">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= list.title %>" class="form-control" readonly>
</div>

<div class="form-group">
    <label for="body">Text</label>
    <textarea id="text" name="text" rows="7" class="form-control" readonly><%= list.text %></textarea>
</div>

<div class="form-group">
    <label for="date">Date</label>
    <input type="text" id="date" name="date" value="<%= list.date %>" class="form-control" readonly>
</div>

<div class="form-group">
    <label for="date">Writer</label>
    <input type="text" id="writer" name="writer" value="<%= list.writer %>" class="form-control" readonly>
</div> 

<div class="post-button">
    <a class="btn btn-success" href="/index/member">Back</a>
    <a class="btn btn-primary" id="edit_page" href="/posts/member/<%=_pid%>/edit">Edit</a>
    <button type="button" id="post_delete" class="btn btn-danger">Delete</button>
</div>

<script>
    if('<%=info%>'!='<%= list.writer %>'){
        $("#edit_page").hide();
        $("#post_delete").hide();
    }
</script>